{
  "cli": {
    "version": ">= 1.0.0",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "channel": "dev",
      "developmentClient": true,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      }
    },
    "SIT": {
      "channel": "sit",
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      }
    },
    "UAT": {
      "channel": "uat",
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      }
    },
    "review": {
      "channel": "review",
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      }
    },
    "production": {
      "channel": "production",
      "autoIncrement": true,
      "developmentClient": false,
      "distribution": "store",
      "android" : {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
