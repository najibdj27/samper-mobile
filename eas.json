{
  "cli": {
    "version": ">= 1.0.1",
    "appVersionSource": "local"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      },
      "env": {
        "APP_VVARIANT": "dev"
      }
    },
    "SIT": {
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      },
      "env": {
        "APP_VVARIANT": "sit"
      }
    },
    "UAT": {
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      },
      "env": {
        "APP_VVARIANT": "uat"
      }
    },
    "review": {
      "developmentClient": false,
      "distribution": "internal",
      "android" : {
        "buildType": "apk"
      },
      "env": {
        "APP_VVARIANT": "review"
      }
    },
    "production": {
      "autoIncrement": true,
      "developmentClient": false,
      "distribution": "store",
      "android" : {
        "buildType": "apk"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
